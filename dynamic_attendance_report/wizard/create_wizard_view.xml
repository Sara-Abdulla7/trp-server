<?xml version="1.0"?>
<odoo>
        <record id="view_create_wizard_form" model="ir.ui.view">
            <field name="name">create.wizard.form</field>
            <field name="model">create.wizard</field>
            <field name="arch" type="xml">
                <form string="Create New Wizard">
                    <group>
                        <group>
                     <field name="start_date"/>
                 </group>
                 <group>
                     <field name="end_date"/>
                 </group>
                 <group>
                   <field name="employee_id"/> 
                 </group> 
                </group>
                    <footer>
                        <!-- <button name="send_email_template" string="Send Mail" type="object"/> -->

                        <button name="action_print_pdf" string="Print PDF" type="object"
                            clsaa="btn-primary" data-hotkey="q"/>

                        <button name="action_print_excel_report" string="Print Excel" type="object"
                            clsaa="btn-primary" data-hotkey="q"/>

                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_wizard" model="ir.actions.act_window">
            <field name="name">Attendance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_create_wizard_form"/>
            <field name="target">new</field>
        
        </record>

        <menuitem id="menu_create_wizard"
         name="Attendance Report"
         parent="hr_attendance.menu_hr_attendance_report"
         action="action_create_wizard"
         sequence="20"/>

</odoo>
