<odoo>
	<data>
        <record id="attendance_email_tree_view" model="ir.ui.view">
            <field name="name">attendance.email.tree.view</field>
            <field name="model">attendance.email</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Attendance Email tree">
                    <field name="employee_name" />
                    <field name="work_email"/>
                    <field name="email_type" required="True"/>
                </tree>
            </field>
        </record>



        <record id="attendance_email_action" model="ir.actions.act_window">
            <field name="name">Attendanc Email Report</field>
            <field name="res_model">attendance.email</field>
            <field name="view_mode">tree</field>
          
        </record>


